#include "functions.h"


void resetLEDS()
{
	*(BASELEDADDR) = 0x0;
}
void resetRGBS()
{
	*(BASERGBADDR + 1) = 0x0;
	*(BASERGBADDR + 2) = 0x0;
	*(BASERGBADDR + 3) = 0x0;
	*(BASERGBADDR + 4) = 0x0;
}

void demoLEDS()
{
	*(BASELEDADDR + 1) = 0xF; //enable all LEDs
	//*(BASELEDADDR) = 0x0;
		for(int i = 0; i < 10000000; i++)
		{
			continue;
		}
		*BASELEDADDR ^= 0xF; //toggle LEDS
}
void demoRGBS()
{
	*(BASERGBADDR) = 0xFFFF; //enable all LEDs
	//*(BASELEDADDR) = 0x0;
		for(int i = 0; i < 10000000; i++)
		{
			continue;
		}
		*(BASERGBADDR + 1) ^= 0xF;
		*(BASERGBADDR + 2) ^= 0xF;
		*(BASERGBADDR + 3) ^= 0xF;
		*(BASERGBADDR + 4) ^= 0xF;

}
void shiftLEDS()
{
	*(BASELEDADDR + 1) = 0xF; //enable all LEDs
	//*(BASELEDADDR) = 0x0;

		for(int i = 0; i < 10000000; i++)
		{
			continue;
		}
		if((*BASELEDADDR & 0xF) == 0)
		{
			*BASELEDADDR = 0x1;
		}
		else
		{
			*BASELEDADDR = (*BASELEDADDR & 0xF) << 0x1; //toggle LEDS
		}
}
void writeLEDS(int val)
{
	*BASELEDADDR = val & 0xF;
}

void setLEDPattern(int pattern)
{
	switch(pattern)
	{
	case 0:
		demoLEDS();
		break;
	case 1:
		shiftLEDS();
		break;
	case 2:
		writeLEDS(0x9);
		break;
	case 4:
		demoRGBS();
		break;
	default:
		resetLEDS();
		//resetRGBS();
		break;
	}
}
uint32_t readLEDS()
{
	uint32_t val=0;

	//read value from IPCore and
	//mask so we only get 4LSB
	val = *BASELEDADDR & 0xF;

	return val;
}

